<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="start"
            android:background="@drawable/rounded_input"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Wróć"
            android:layout_marginBottom="16dp" />

        <TextView
            style="@style/KanarekHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZGŁOŚ KANARA"
            android:layout_marginBottom="16dp" />

        <TextView
            android:text="Przystanek"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/stop_input"
            style="@style/KanarekEditText.Rounded"
            android:hint="Gorczyn PKM" />

        <TextView
            android:text="Linia"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/line_input"
            style="@style/KanarekEditText.Rounded"
            android:hint="17" />

        <TextView
            android:text="Ilość"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/count_input"
            style="@style/KanarekEditText.Rounded"
            android:hint="2"
            android:inputType="number" />

        <Button
            android:id="@+id/submit_button"
            style="@style/KanarekButton.Dark"
            android:text="Wyślij zgłoszenie"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
