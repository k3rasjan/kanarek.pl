<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/KanarekHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/register_header" />

        <TextView
            android:text="@string/username_hint"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/username_input"
            style="@style/KanarekEditText.Rounded"
            android:hint="Wprowadź nazwę użytkownika" />

        <TextView
            android:text="@string/email_hint"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/email_input"
            style="@style/KanarekEditText.Rounded"
            android:hint="Wprowadź swój email"
            android:inputType="textEmailAddress" />

        <TextView
            android:text="@string/password_hint"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/password_input"
            style="@style/KanarekEditText.Rounded"
            android:hint="Wprowadź swoje hasło"
            android:inputType="textPassword" />

        <TextView
            android:text="@string/confirm_password_label"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/password2_input"
            style="@style/KanarekEditText.Rounded"
            android:hint="@string/confirm_password_label"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/register_button"
            style="@style/KanarekButton.Dark"
            android:text="@string/register_header"
            android:layout_marginTop="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_link"
            android:text="@string/login_button"
            android:textColor="@color/accent_blue"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
