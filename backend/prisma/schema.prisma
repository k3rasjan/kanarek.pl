generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Trips {
  trip_id               String @id
  trip_headsign         String
  direction_id          String
  shape_id              String
  wheelchair_accessible String
  brigade               String
  Shapes                Shapes @relation(fields: [shape_id], references: [shape_id])
}

model Shapes {
  shape_id          String  @id
  shape_points      ShapePoint[]
  Trips             Trips[]
}

model ShapePoint {
  id                Int      @id @default(autoincrement())
  shape_id          String
  shape_pt_lat      String
  shape_pt_lon      String
  shape_pt_sequence String
  Shapes            Shapes   @relation(fields: [shape_id], references: [shape_id])

  @@unique([shape_id, shape_pt_sequence])
}

model Inspectors {
  id        Int      @id @default(autoincrement())
  vehicleId String
  date      DateTime
}
